--Part C


SELECT dept_name
FROM Departments
WHERE dept_id IN (
    SELECT dept_id
    FROM Courses
    GROUP BY dept_id
    HAVING COUNT(course_id) > 2
);

--Part D

GRANT SELECT ON Courses TO 'viewer_user'@'localhost';
